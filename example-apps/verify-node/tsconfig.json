{
	"$schema": "http://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"outDir": "lib",
		"rootDirs": [
			"src/"
		],
		"composite": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"sourceMap": true,
		"declarationMap": true,
		"inlineSources": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"types": [
			"node",
			"jest"
		],
		"module": "commonjs",
		"target": "es2017",
		"lib": [
			"es2017"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"lib"
	]
}