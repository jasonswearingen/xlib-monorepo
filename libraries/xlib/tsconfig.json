{
	"$schema": "http://json.schemastore.org/tsconfig",
	"extends": "./node_modules/@xlib/build-tools/includes/tsconfig-node.json",
	"compilerOptions": {
		"outDir": "lib",
		"types": [
			"node",
			"jest",
			"webpack-env" //for webpack typings, as per: https://rushstack.io/pages/heft_tasks/webpack/		
		],
		"lib": [
			//"es5",
			"scripthost",
			// "es2015.collection",
			// "es2015.promise",
			// "es2015.iterable",
			"dom",
			"ES2017"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"lib",
		"lib-esm"
	]
}