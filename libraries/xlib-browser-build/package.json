{
  "name": "@xlib/browser-build",
  "version": "0.0.1",
  "description": "builds an esm (browser) version of xlib and puts it in ../xlib/lib-esm",
  "typings": "lib/_main.d.ts",
  "scripts": {
    "build": "heft build --clean",
    "heft": "heft",
    "watch": "heft build --clean ; heft build --watch",
    "eslint-fix": "eslint ./src/**/*.ts* --fix",
    "dep-check": "NPM_CHECK_INSTALLER=pnpm CI=true npm-check --skip-unused",
    "dep-upgrade": "NPM_CHECK_INSTALLER=pnpm CI=true npm-check --skip-unused --update-all"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rushstack/heft": "~0.11.1",
    "@types/jest": "~26.0.13",
    "@types/node": "~14.10.1",
    "@xlib/build-tools": "workspace:*",
    "@xlib/eslint-config": "workspace:*"
  }
}