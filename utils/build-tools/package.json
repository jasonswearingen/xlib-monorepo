{
  "name": "@xlib/build-tools",
  "version": "0.0.1",
  "description": "toolchain for this monorepo",
  "bin": {
    "my-build": "lib/my-build.js",
    "my-bulk-command": "lib/my-bulk-command.js"
  },
  "scripts": {
    "build": "heft test --clean",
    "watch": "heft build --clean ; heft test --watch",
    "eslint-fix": "eslint ./src/**/*.ts* --fix",
    "dep-check": "NPM_CHECK_INSTALLER=pnpm CI=true npm-check --skip-unused",
    "dep-upgrade": "NPM_CHECK_INSTALLER=pnpm CI=true npm-check --skip-unused --update-all"
  },
  "dependencies": {
    "@rushstack/eslint-config": "~1.3.0",
    "@rushstack/heft": "~0.11.1",
    "@types/jest": "~26.0.13",
    "@types/node": "~14.10.1",
    "@typescript-eslint/eslint-plugin": "~4.1.0",
    "@typescript-eslint/parser": "~4.1.0",
    "eslint": "~7.8.1",
    "eslint-plugin-jest": "~24.0.0",
    "eslint-plugin-react": "~7.20.6",
    "typescript": "~4.0.2"
  }
}